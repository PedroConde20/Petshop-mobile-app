<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterDate">

    <TextView
        android:id="@+id/tvPet"
        android:layout_width="291dp"
        android:layout_height="44dp"
        android:fontFamily="sans-serif-light"
        android:text="Registrar Cita"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="272dp"
        android:layout_height="148dp"
        app:layout_constraintBottom_toTopOf="@+id/etTypePet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPet"
        app:srcCompat="@drawable/dogemovil" />

    <EditText
        android:id="@+id/etNamePet"
        android:layout_width="265dp"
        android:layout_height="51dp"
        android:ems="10"
        android:hint="Nombre del perro"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btncita"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTypePet" />

    <EditText
        android:id="@+id/etTypePet"
        android:layout_width="265dp"
        android:layout_height="51dp"
        android:ems="10"
        android:hint="Tipo de perro"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/etNamePet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btncita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar Cita"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNamePet" />

</androidx.constraintlayout.widget.ConstraintLayout>